@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>TailgateLive</h1>
    <p id="lead">A live chat application for anyone, and everyone, who is interested in setting up group events for tailgating parties.</p>
    <div id="form" class="col-md-12">
        <div class="input-group">
            <input type="text" id="searchField" class="form-control" placeholder="Search team schedule or user profile...">
            <span class="input-group-btn">
                <button type="button" id="searchButton" class="btn btn-default">Search</button>
            </span>
        </div>
    </div>
    <br />
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="container homeContainer">
    <div class="col-md-12">
        <h1 id="meetUp">Meet up &amp; Make new friends!</h1>
        <p>Bring food to share.</p>
        <h2 id="grabDrink">Grab a drink</h2>
        <p>Let's talk sports and play some games!</p>
        <p id="homeMessage">Host events and/or attend events in your area. </p>
    </div>
</div>
