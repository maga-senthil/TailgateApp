@model TailgateLive.Models.CommentSearchModel

@{
    ViewBag.Title = "CommentSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("CommentSearch", "Comments"))
{

  @Html.HiddenFor(model => model.EventId)

    if (Model.List_Commments != null)
    {
        <h2>Event Details</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EventTitle)
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.EventTitle)
                </td>

            </tr>
        </table>
      <h2>Comments about the Event</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EventTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>

            </tr>

            @foreach (var item in Model.List_Commments)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.EventTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>

                </tr>
            }
        </table>
    }
  
            <div class="form-group">
                <h5 class="col-md-2 control-label"><b>Your Comment about Event</b></h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CommentString, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CommentString, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Home" />
                </div>
            </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


